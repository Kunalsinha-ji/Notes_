<%- include("partials/header"); -%>

<div class="compose-container">
    <h1>COMPOSE</h1>
    <form class="compose-form" action="/compose" method="post">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="input-field" placeholder="Enter title..." required>
        
        <label for="contents">Contents</label>
        <textarea id="contents" name="contents" rows="10" class="input-field" placeholder="Write your contents..." required></textarea>
        
        <button type="submit" class="button">POST</button>
    </form>
</div>

